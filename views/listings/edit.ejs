<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 mt-3 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" novalidate class="needs-validation" action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>  
            <input name="listing[title]" required value="<%= listing.title %>" type="text" class="form-control">
            <div class="valid-feedback"> Title looks good</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" required class="form-control"><%= listing.description %></textarea>
            <div class="invalid-feedback">please enter a short description</div>
        </div>
    
        <div class="mb-3">
            Original Listing Image
            <br>
            <img src="<%= originalImageUrl %>" class="img-fluid rounded" style="max-height: 200px;" alt="Current Image">
        </div>
        
        <div class="mb-3">
            <lable for="image" class="form-label">Upload New Image</lable>
            <input name="listing[image]" 
             type="file"
              class="form-control"></div>
           
        <div class="row ">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input name="listing[price]" required value="<%= listing.price %>" type="number" class="form-control">
                <div class="invalid-feedback">please enter a valid price</div>
            </div>
           <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" required value="<%= listing.country %>" class="form-control" type="text">
            <div class="invalid-feedback">please enter a country name</div>
           </div>
        </div>
        
        <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input name="listing[location]" required value="<%= listing.location %>" class="form-control" type="text">
        <div class="invalid-feedback">please enter the location</div>
        </div>
               
        <button class="btn mb-3 mt-3 add-btt">Edit</button>
    </form>
    </div>
</div>
