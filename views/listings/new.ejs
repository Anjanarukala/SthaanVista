<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" 
            placeholder="Add a catchy title" type="text" 
            class="form-control"
            required>
            <div class="valid-feedback"> Title looks good</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]"  
            type="text"
            class="form-control"
            required></textarea>
            <div class="invalid-feedback">please enter a short description</div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listing Image</lable>
            <input name="listing[image]"  type="file" class="form-control">
            required
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <div class="invalid-feedback">please enter a valid price</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-8">
                    <lable for="country" class="form-label">Country</lable>
                    <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
                    <div class="invalid-feedback">please enter a country name</div>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
            <div class="invalid-feedback">please enter the location</div>
        </div>
        
        
        
        <button class="btn mt-3 mb-3 btn-dark add-btt" >Add</button>
        
    </form>
</div>
</div>
